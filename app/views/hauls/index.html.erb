<% if user_signed_in? %>

      <h2>Welcome <%= current_user.name %></h2>
     
<h1>Listing Hauls</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Store</th>
    <th colspan="3"></th>
  </tr>

  <% @haul.each do |haul| %>
    <tr>
      <td><%= haul.subject   %> </td>
    <td><%= haul.store_name %></td>
 
 <td>
      <td><%= link_to 'Show', haul_path(haul)  %> </td>
   
      <td><%= link_to 'Edit', edit_haul_path(haul) %>  </td>

      <td><%= link_to 'Destroy', haul_path(haul),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
              </td>
              </td>
             
    </tr>

  <% end %>
  </table>
  <br>
  <%= link_to 'New haul', new_haul_path %>
  <div>
     <%= link_to 'Edit Profile', edit_user_registration_path %>
     </div>
    
     
 <%end%>